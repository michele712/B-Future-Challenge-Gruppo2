{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "env": {
      "PORT": "3000" 
    },
    "pipfile": "Pipfile", 
    "requirements": "requirements.txt"  
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "start": {
    "command": "uvicorn app:app --host 0.0.0.0 --port $PORT"  
  }
}
