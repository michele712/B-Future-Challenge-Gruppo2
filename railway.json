{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "env": {
      "PORT": "3000"  // Puoi impostare la porta se necessario
    },
    "pipfile": "Pipfile",  // Assicurati che esista se usi un Pipfile, altrimenti usa requirements.txt
    "requirements": "requirements.txt"  // Indica il file requirements.txt se non usi un Pipfile
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "start": {
    "command": "uvicorn app:app --host 0.0.0.0 --port $PORT"  // Modifica 'app:app' con il tuo file/app
  }
}
